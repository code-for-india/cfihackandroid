<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView android:id="@+id/descr" android:layout_width="match_parent" android:layout_height="40dp"
            android:text="Separate toilets for boys and girls" android:layout_margin="10dp"/>

    <ImageView
            android:id="@+id/photo"
            android:layout_below="@+id/descr"
            android:layout_width="100dp" android:layout_height="100dp"/>

    <Button android:text="Take Photo" android:id="@+id/takePhoto"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/photo"
            android:layout_width="80dp"
            android:layout_alignTop="@+id/photo" android:layout_alignRight="@+id/descr"
            android:layout_alignEnd="@+id/descr"/>

    <ListView
        android:id="@android:id/list"
        android:layout_above="@+id/button_bar"
        android:choiceMode="singleChoice"
        android:layout_below="@id/photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@android:id/empty"
        android:layout_above="@+id/button_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

    <!-- Layout for wizard controls -->
    <LinearLayout
            android:id="@+id/button_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >
        <Button
                android:id="@+id/cancel_button"
                android:enabled="false"
                android:text="Back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                />
        <Button
                android:id="@+id/save_button"
                android:text="Save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
    </LinearLayout>
</RelativeLayout>